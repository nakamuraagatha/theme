{% assign page_title_claim = ' | Playmakers, dein American Football Shop' %}
{% if cpage_title %}
  {% assign page_title = cpage_title %}
{% endif %}
{% if cpage_title_claim %}
  {% assign page_title_claim = cpage_title_claim %}
{% endif %}
{% if cpage_description %}
  {% assign page_description = cpage_description %}
{% endif %}
<!DOCTYPE html>
<html lang="de">
  <head>
    <title>{{ page_title }}{{ page_title_claim }}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ page_description | truncate: 160 }}">
    <meta name="author" content="Playmakers - Pascal Heck">
    <meta name="revisit-after" content="7 days">
    <meta name="robots" content="index,follow">
    <meta http-equiv="content-language" content="de">
    <meta name="msvalidate.01" content="98A9D8B3C93FC3932BCF4681EA02E831" />
    <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="canonical" href="{{ canonical_url }}">

    {{ 'css_style.css' | asset_url | stylesheet_tag }}

    {% include 'facebook' %}

    <!--[if lt IE 9]>
      {{ 'js_html5shiv.js' | asset_url | script_tag }}
      {{ 'js_respond.min.js' | asset_url | script_tag }}
    <![endif]-->

    {{ content_for_header }}
    <script type="text/javascript">
      var _sift = _sift || [];
      (function() {
        var _session_id = '';
        var dc = document.cookie;
        var prefix = '_shopify_s=';
        var begin = dc.indexOf(prefix);
        if (begin !== -1) {
          var end = dc.indexOf(";", begin);
          if (end === -1) {
            end = dc.length;
          }
          _session_id = decodeURI(dc.substring(begin + prefix.length, end));
        }
        _sift.push(['_setAccount', '718f18fbe2']);
        _sift.push(['_setUserId', '{{customer.email}}']);
        _sift.push(['_setSessionId', _session_id]);
        _sift.push(['_trackPageview']);

        function ls() {
          var e = document.createElement('script');
          e.type = 'text/javascript';
          e.async = true;
          e.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'cdn.siftscience.com/s.js';
          var s = document.getElementsByTagName('script')[0];
          s.parentNode.insertBefore(e, s);
        }
        if (window.attachEvent) {
          window.attachEvent('onload', ls);
        } else {
          window.addEventListener('load', ls, false);
        }
      })();
    </script>
  </head>
  <body>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/de_DE/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
    <div id="menu">
      <div class="container">
        <div class="row">
          <div class="col-md-11 col-lg-11 col-md-offset-1">
            <nav>
              <ul id="main-nav" class="nav nav-pills">
                <li class="nav-logo">
                  <a href="/" title="Playmakers Logo - dein American Football Shop"><img width="129" height="162" src="{{ 'logo.png' | asset_url }}" alt="Playmakers Logo - dein American Football Shop"></a>
                </li>
                {% assign linklist = linklists['main-menu'] %}
                {% for link in linklist.links %}
                  {% assign title = link.title | split: ';' %}
                  {% assign active = link.active %}
                  {% if product && link.type == 'collection_link' %}
                    {% assign active = false %}
                    {% for collection in product.collections %}
                      {% if active == false and collection.handle == link.object.handle %}
                        {% assign active = true %}
                      {% endif %}
                    {% endfor %}
                  {% endif %}
                  <li class="{{ title[1] }} {% if active %}active{% endif %}"><a class="button" href="{{ link.url }}" title="{{ link.object.title }}">{{ title[0] }}</a></li>
                {% endfor %}
                 <li class="nav-banner">
                  <a href="https://www.facebook.com/playmakers.shop" target="_blank"><img width="129" height="96" src="{{ 'banner_fb.png' | asset_url }}" alt="Neueröffnung - Top Insights, Top Preise"></a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>

    <div id="main" class="container">
      <header>
        <div id="header" class="row">
          <div class="col-xs-4 col-md-4 col-md-offset-1">
            <nav>
              <ul class="header-menu nav nav-pills hidden">
                {% assign linklist = linklists['header-menu'] %}
                {% for link in linklist.links %}
                  {% assign title = link.title | split: ';' %}
                  <li class="{{ title[1] }} {% if link.active %}active{% endif %}">
                    <a href="{{ link.url }}">{{ title[0] }}</a>
                  </li>
                {% endfor %}
              </ul>
            </nav>
          </div>
          <div id="searchbar" class="col-xs-8 col-md-7">
            <nav>
              <ul class="header-menu nav nav-pills pull-right">
                {% if cart.item_count > 0 %}
                  <li><a href="/cart">Warenkorb <span class="badge">{{ cart.item_count }}</span></a></li>
                {% endif %}
              </ul>
            </nav>
            <br>
            <form action="/search" method="get" class="search-form" role="search">
              <input type="hidden" name="type" value="product" />
              <div class="input-group">
                <label class="sr-only" for="searchterms">Suche</label>
                <input type="text" class="form-control" id="searchterms" name="q" value="{{ search.terms | escape }}" placeholder="Playmakers durchsuchen nach..." />
                <span class="input-group-btn">
                  <button class="btn btn-default" type="submit">Suchen!</button>
                </span>
              </div>
            </form>
          </div>
        </div>
      </header>

      <section id="content" class="{{ template | replace: '.', ' '}}">
        {{ content_for_layout }}
      </section>

      <section id="vendor">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
            <ul>
              <li><a href="{{'Nike' | url_for_vendor }}"         ><img src="{{ 'american_football_nike.jpg' | asset_url }}"        alt="Wir führen American Football Produkte von Nike"></a></li>
              <li><a href="{{'Adidas' | url_for_vendor }}"       ><img src="{{ 'american_football_adidas.jpg' | asset_url }}"      alt="Wir führen American Football Produkte von Adidas"></a></li>
              <li><a href="{{'Under Armour' | url_for_vendor }}" ><img src="{{ 'american_football_underarmour.jpg' | asset_url }}" alt="Wir führen American Football Produkte von Under Armour"></a></li>
              <li><a href="{{'Riddell' | url_for_vendor }}"      ><img src="{{ 'american_football_riddell.jpg' | asset_url }}"     alt="Wir führen American Football Produkte von Riddell"></a></li>
              <li><a href="{{'Rawlings' | url_for_vendor }}"     ><img src="{{ 'american_football_rawlings.jpg' | asset_url }}"    alt="Wir führen American Football Produkte von Rawlings"></a></li>
            </ul>
          </div>
        </div>
      </section>

      <footer>
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
            <ul id="footer-list">
              {% include 'footer_menu' with 'footer-shop-menu' %}
              {% include 'footer_menu' with 'footer' %}
              {% include 'footer_menu' with 'footer-info-menu' %}
              <li class="socials">
                <h4>Folge uns auf</h4>
                <ul>
                  <li>
                   <div class="fb-like" data-href="http://www.facebook.com/playmakers.shop" data-colorscheme="light" data-layout="button_count" data-show-faces="false"></div>
                  </li>
                  <li>
                   <a href="https://twitter.com/playmakers_shop" class="twitter-follow-button" data-show-count="false" data-lang="de">@playmakers_shop</a>
                   <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
                  </li>
                  <li>
                    <div class="g-plusone" data-size="medium" data-annotation="inline" data-width="100"></div>
                  </li>
                </ul>
              </li>
              <li class="payment-methods">
                <h4>Sicher zahlen mit</h4>
                <img width="100" height="52" src="{{ 'paypal_logo.png' | asset_url }}" alt="Paypal Logo">
              </li>
            </ul>
          </div>
        </div>
      </footer>
    </div>

    {{ '//code.jquery.com/jquery-1.11.0.min.js' | script_tag }}
    {{ 'js_script.js' | asset_url | script_tag }}

    <script type="text/javascript">
      window.___gcfg = {lang: 'de'};

      (function() {
        var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
        po.src = 'https://apis.google.com/js/platform.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
      })();
    </script>

    {{ content_for_footer }}
  </body>
</html>

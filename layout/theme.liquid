<!DOCTYPE html>
<html>
  <head>
    <title>{% if template == "404" %}Page not found{% elsif template == 'index' %}{{ shop.name }}{% else %}{{ page_title }} - {{ shop.name }}{% endif %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if page_description %}
    <meta name="description" content="{{ page_description }}">
    {% endif %}
    <meta name="author" content="{{ settings.meta_author }}">

    <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png">
    <link rel="canonical" href="{{ canonical_url }}">

    <link href="assets/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <!-- {{ 'css/bootstrap.min.css' | asset_url | stylesheet_tag }} -->
    <link href="assets/css/style.css" rel="stylesheet" media="screen">
    <!-- {{ 'css/style.css' | asset_url | stylesheet_tag }} -->

    <!--[if lt IE 9]>
      <script src="assets/js/html5shiv.js"></script>
      <script src="assets/js/respond.min.js"></script>
      {{ 'js/html5shiv.js' | asset_url | script_tag }}
      {{ 'js/respond.min.js' | asset_url | script_tag }}
    <![endif]-->

    <!-- {% include 'fb-open-graph-tags' %} -->

    <!-- content_for_header start -->
    {{ content_for_header }}
    <!-- content_for_header end -->
  </head>
  <body>

    <div id="menu" class="hidden-xs">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <nav>
              <ul id="main-nav" class="nav nav-pills">
                <li id="nav-logo"><a href="/"><img src="/assets/logo.png"></a></li>
                <li id="nav-helmet"><a class="button" href="/collections/helmets">Helmet</a></li>
                <li id="nav-hands"><a class="button" href="/collections/hands">Hands</a></li>
                <li id="nav-pads"><a class="button" href="/collections/pads">Pads</a></li>
                <li id="nav-boots"><a class="button" href="/collections/boots">Boots</a></li>
                <li id="nav-pm-kit"><a class="button" href="/collections/pm-kit">PM-Kit</a></li>

                <li id="nav-blog"><a class="button" href="/blogs">Blog</a></li>
                <li id="nav-contact"><a class="button" href="/pages/contact">Kontakt</a></li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>

    <div id="main" class="container">
      <div id="header" class="row">
        <div class="col-xs-8 col-md-6 col-md-offset-1">
          <nav>
            <ul id="top-nav" class="nav nav-pills">
              <li><a id="homeIcon" href="/" class="hidden-xs">Home</a></li>
              <li><a href="/collections/all" class="hidden-xs">Shop</a></li>
              <li><a href="/pages/about-playmaker">About Playmaker</a></li>
              <li><a href="/pages/contact">Kontakt</a></li>

              <li><a href="/account/login" id="customer_login_link">Login</a></li>
              <li><a href="/account/register" id="customer_register_link">Anmelden</a></li>
            </ul>
          </nav>
        </div>
        <div class="col-xs-4 col-md-3 col-md-offset-2">
          <nav class="pull-right">
            <ul id="top-nav" class="nav nav-pills">
              {% if cart.item_count != 0 %}
              <li><a href="/cart" title="Checkout">Checkout</a></li>
              {% endif %}
              <li><a href="/cart">Warenkorb ({{ cart.item_count }})</a></li>
            </ul>
          </nav>
        </div>
      </div>

      <div id="content" class="row">
        <div class="col-md-12">
        <!-- content_for_layout start -->
         {{ content_for_layout }}
        <!-- content_for_layout end -->
        </div>
      </div>

      <div id="footer" class="row">
        <div class="col-xs-12 col-md-10 col-md-offset-1">
          <ul id="footer-list" class="reset">
            <li>
              <h5>Shop</h5>
              <ul id="footer-nav1" class="reset">
                <li><a href="/collections/helmets">Helmet</a></li>
                <li><a href="/collections/hands">Hands</a></li>
                <li><a href="/collections/pads">Pads</a></li>
                <li><a href="/collections/boots">Boots</a></li>
                <li><a href="/collections/pm-kit">PM-Kit</a></li>
              </ul>
            </li>
            <li>
              <h5>Anschrift</h5>
              <p>PLAYMAKER<br>
              Street<br>
              City
              </p>
            </li>
            <li>
              <h5>Informationen</h5>
              <ul id="footer-nav2" class="reset">
                <li id="nav-blog"><a class="button" href="/blogs">Blog</a></li>
                <li id="nav-contact"><a class="button" href="/pages/contact">Kontakt</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <!-- {{ 'jquery-1.10.2.min.js' | asset_url | script_tag }} -->
    <!-- {{ 'bootstrap.min.js' | asset_url | script_tag }} -->
    <script src="assets/js/jquery-1.10.2.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript">
      $(document).ready(function() {
        $('#teaser .carousel').carousel().on('slide.bs.carousel', function() {

        });
      });
    </script>

    <!-- <script src="assets/js/bootstrap.min.js"></script> -->
  </body>
</html>

<!doctype html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-touch no-js"> <!--<![endif]-->
<head>

  <!-- Basic page needs ================================================== -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  {% if settings.favicon_enable %}
  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
  {% endif %}

  <!-- Title and description ================================================== -->
  <title>
  {{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
  <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <!-- Product meta ================================================== -->
  {% include 'open-graph-tags' %}
  {% include 'twitter-card' %}

  <!-- Helpers ================================================== -->
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  {% if settings.ajax_cart_enable %}
  <!-- Ajaxify Cart Plugin ================================================== -->
  {{ 'ajaxify.scss.css' | asset_url | stylesheet_tag }}
  {% endif %}

  <!-- CSS ================================================== -->
  {{ 'timber.scss.css' | asset_url | stylesheet_tag }}
  {% include 'google-fonts' %}

  <!-- Header hook for plugins ================================================== -->
  {{ content_for_header }}

  {% include 'oldIE-js' %}

  {% comment %}
    If you store has customers disabled, you can remove the following JS file
  {% endcomment %}
  {% if template contains 'customers' %}
    {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
    {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}

  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}
  {{ 'modernizr.min.js' | asset_url | script_tag }}
  {{ 'visual_options.js' | asset_url | script_tag }}
</head>

<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >
  <header class="site-header" role="banner">
    <div class="wrapper header">

      <div class="grid--full">
        {% capture tag %}{% if template == 'index' %}h1{% else %}div{% endif %}{% endcapture %}
        <{{ tag }} class="h1 header-logo large--left" itemscope itemtype="http://schema.org/Organization">
          <a href="/" itemprop="url"><img src="{{ 'logo.svg' | asset_url }}" alt="{{ shop.name }}" itemprop="logo">Playmakers Football</a>
        </{{ tag }}>

        {{ 'layout.navigation.special_html' | t }}

        <div class="header-nav large--text-right">
          {% if settings.header_message != blank or shop.customer_accounts_enabled %}
            <div class="site-header--text-links{% if settings.header_message == blank %} medium-down--hide{% endif %}">
              {% if settings.header_message != blank %}
                {{ settings.header_message }}
              {% endif %}

              {% if shop.customer_accounts_enabled %}
                <span class="site-header--meta-links medium-down--hide">
                  {% if customer %}
                    {% capture first_name %}<a href="/account">{{ customer.first_name }}</a>{% endcapture %}
                    {{ 'layout.customer.logged_in_as_html' | t: first_name: first_name }} &middot; {{ 'layout.customer.log_out' | t | customer_logout_link }}
                  {% else %}
                    {{ 'layout.customer.sign_in' | t | customer_login_link }}
                    {% if shop.customer_accounts_optional %}
                      <span class="site-header--spacer">or</span>
                      {{ 'layout.customer.create_account' | t | customer_register_link }}
                    {% endif %}
                  {% endif %}
                </span>
              {% endif %}
            </div>

            <br class="medium-down--hide">
          {% endif %}

          <a href="/cart" class="header-btn cart-toggle right">
            <span class="icon icon-cart"></span>
            {{ 'layout.cart.cart' | t }} <span id="cartCount" {% if cart.item_count == 0 %}class="hidden-count"{% endif %}>{{ cart.item_count }}</span>
          </a>

          {% for link in linklists['menu-header'].links %}
            <a href="{{ link.url }}" class="header-btn link--{{ link.title | handleize }}">
              {{ link.title }}
            </a>
          {% endfor %}
        </div>
      </div>

    </div>
  </header>

  <div id="mobileNavBar">
    <div class="display-table-cell">
      <a class="menu-toggle mobileNavBar-link">{{ 'layout.navigation.mobile_menu' | t }}</a>
    </div>
    <div class="display-table-cell text-center text-logo">
      <a href="/">
        <img src="{{ 'logo.svg' | asset_url }}" alt="{{ shop.name }}" itemprop="logo">Playmakers Football
      </a>
    </div>
    <div class="display-table-cell">
      <a href="/cart" class="cart-toggle mobileNavBar-link">
        <span class="icon icon-cart"></span>
      </a>
    </div>
  </div>

  <nav class="nav-bar" role="navigation">
    <div class="wrapper header">
      {% include 'search-bar' %}
      {% include 'site-nav' %}
    </div>
  </nav>

  <main class="wrapper main-content" role="main">
    {{ content_for_layout }}
  </main>

  {% include 'footer' %}

  {% if settings.slider_home_enable %}
    {{ 'jquery.flexslider.min.js' | asset_url | script_tag }}
  {% endif %}

  {{ 'jquery.fancybox.pack.js' | asset_url | script_tag }}

  {{ 'shop.js' | asset_url | script_tag }}
  <script>
  var moneyFormat = '{{ shop.money_format }}';
  </script>

  {{ 'handlebars.min.js' | asset_url | script_tag }}
  {% include 'ajax-cart-template' %}
  {{ 'ajaxify.js' | asset_url | script_tag }}
  <script>
    var inIframe = function() {
      try {
        return window.self !== window.top;
      } catch (err) {
        return true;
      }
    };

    if (inIframe()) {
      $('body').addClass('plain');
    }

    jQuery(function($) {
      ajaxifyShopify.init({
        method: '{{ settings.ajax_cart_method }}',
        wrapperClass: 'wrapper',
        formSelector: '#addToCartForm',
        addToCartSelector: '#addToCart',
        cartCountSelector: '#cartCount',
        toggleCartButton: '.cart-toggle',
        useCartTemplate: true,
        btnClass: 'btn',
        moneyFormat: {{ shop.money_format | json }},
        disableAjaxCart: false,
        enableQtySelectors: true
      });

      var vid = document.getElementById("bgvid");
      if (vid) {
        vid.playbackRate = 0.4;
      }
      $("#bgvid").bind('ended', function(){
       this.play();
      });

      $('a[data-fancybox-type="iframe"]').fancybox();
      $('.fancybox').fancybox();
      $('.cart-continue').click(function(e) {
        e.preventDefault();
        $('.ajaxifyCart__close').click();
      });
      // $("img.lazy").lazyload();
    });
  </script>

  {{ content_for_footer }}
</body>
</html>

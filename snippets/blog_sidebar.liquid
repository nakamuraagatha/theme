<div class="fb-like-box" data-href="https://www.facebook.com/playmakers.shop" data-width="250px" data-height="300px" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="false">
</div>

<div class="articles">
 <h4>Weitere Blog Artikel:</h4>
  <ul>
    {% for article in blog.articles limit 5 %}
      <li><a href="{{ article.url }}">{{ article.title }}</a></li>
    {% endfor %}
  </ul>
</div>

<div class="tags">
  <h4>Tags:</h4>
  {% for tag in blog.tags %}
    <a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>{% unless forloop.last %}, {% endunless %}
  {% endfor %}
</div>

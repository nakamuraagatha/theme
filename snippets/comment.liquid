<div class="comment">
  <div class="rte">
    {{ comment.content }}
  </div>

  <em>
    <strong>{{ comment.author }}</strong> on
    <strong>
      <time datetime="{{ comment.created_at | date: '%Y-%m-%d' }}">
        {{ comment.created_at | date: '%b %d, %Y' }}
      </time>
    </strong>
  </em>
</div>

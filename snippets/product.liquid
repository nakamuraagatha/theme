{% capture link_title %}{{collection.title}} - {{ product.vendor }} {{ product.title }} - {{ product.price | money }}{% endcapture %}

{% capture banner_image %}{% if product.tags.first == "Sale"%}product_border_sale.png{% else %}product_border.png{% endif %}{% endcapture %}
<li class="product">
  <div class="head">
    <a href="{{ product.url | within: collection }}" title="{{ link_title }}">
      <img src="{{ product.featured_image | product_img_url: 'compact' }}"
           alt="{{ product.featured_image.alt | escape }}"
           class="noborder">
      <img src="{{ banner_image | asset_url }}"
           alt="{{ product.featured_image.alt | escape }}"
           style="background-image:url('{{ product.featured_image | product_img_url: 'compact' }}')"
           class="border">
    </a>
  </div>
  <div class="body">
    <a href="{{ product.url | within: collection}}"  title="{{ link_title }}"><h4>{{ product.vendor }} {{ product.title }}</h4></a>
    <a href="{{ product.url | within: collection}}"  title="{{ link_title }}" class="more">Details</a>
    <span class="price">{% if product.price_varies %}<small>ab</small> {% endif %}{{ product.price | money }}</span>
  </div>
</li>

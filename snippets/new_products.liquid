{% assign collection = new_products %}

<div id="new-products" class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2>Neuste Produkte</h2>
    <ul class="list ul-reset">
      {% for product in collection.all_products limit:5 %}
      <li>
        <div class="head">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | product_img_url: 'small' }}" alt="{{ product.featured_image.alt | escape }}">
          </a>
        </div>
        <div class="body">
          <h5>{{ product.vendor }} {{ product.title }}</h5>
          <a href="{{ product.url }}"> >> Details</a>
          <a href="{{ product.url }}" class="price">{{ product.price | money }}</a>
        </div>
      </li>
      {% endfor %}

    </ul>
  </div>
  <div class="col-md-1 right"><div></div></div>
</div>

{% if shop.money_format == '${{amount}}' %}
  {{ price | money | replace: '$','' | replace: '.','<sup>' }}</sup>
{% elsif shop.money_format == '${{amount_with_comma_separator}}' %}
  {{ price | money | replace: '$','' | replace: ',','<sup>' }}</sup>
{% else %}
  <small>{{ price | money }}</small>
{% endif %}

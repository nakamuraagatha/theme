</style>
<div class="slip">
   <div class="sender">
        <div class="rotate">
            <p>{{ shop.name }}</br>
            {{ shop.address }}<br>
           {{ shop.zip | upcase }} {{ shop.city | upcase}}</p>
        </div>
    </div>
    <div class="recipient">
        <div class="rotate">
          <p>{{ shipping_address.name }}<br>
          {{ shipping_address.street }}<br>
          {{ shipping_address.zip | upcase }} {{ shipping_address.city | upcase}}<br>
          {{ shipping_address.country | upcase}}</p>
        </div>
    </div>
</div>

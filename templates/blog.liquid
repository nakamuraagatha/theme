{% paginate blog.articles by 10 %}
<div class="content-offset row">
  <div class="col-md-10 col-md-offset-1">
    <h1>{{ blog.title }}</h1>


    {% for article in blog.articles %}
      <div class="media">
        <div class="media-body">
          <h2 class="media-heading"><a href="{{ article.url }}">{{ article.title }}</a><small class="date"> - {{ article.published_at | date: "%B %d %Y" }}</small></h2>
           {% if article.comments_enabled? %}, <span>{{ article.comments_count }} {{ article.comments_count | pluralize: "Comment", "Comments" }}</span>{% endif %}
          <p>{{ article.excerpt_or_content }}</p>
        </div>
      </div>
      <hr class="divider" />
    {% endfor %}

    {% include 'pagination' %}
  </div>
</div>
{% endpaginate %}

{% assign product_types = collection.all_types | join: ', '  %}
{% assign vendors = collection.all_vendors | join: ', '  %}
{% assign cpage_title = "American Football " | append: product_types %}
{% assign tags = collection.all_tags | join: ', '  %}
{% assign cpage_description = cpage_title | append: " von " | append: vendors | append: " f√ºr die Positionen: " | append: tags %}

<div class="content-offset row">
  <div class="col-md-10 col-md-offset-1 ">
    <h1>{{ collection.title }}</h1>
    <ul class="products">
      {% for product in collection.all_products %}
        {% include 'product' with product %}
      {% endfor %}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <hr class="dots">
  </div>
</div>

<div class="content-offset row">
  <div class="col-md-10 col-md-offset-1">
    <h1>{{ page.title }}</h1>
    <p>{{ page.content }}</p>

    <hr>

    {% form 'contact' %}
      {% if form.errors %}
        <div class="errorForm feedback">
          <p>Da ist etwas schief gelaufen! Bitte achte darauf, dass sowohl Email-, als auch das Nachrichtenfeld ausgefüllt sind.</p>
        </div>
      {% endif %}

      {% if form.posted_successfully? %}
        <div class="successForm feedback">
          <p>Danke für deine Nachricht! Wir werden uns so schnell wie möglich mit einer Antwort bei dir melden.</p>
        </div>
      {% else %}
        <div class="form-group">
          <label>Dein Name:</label>
          <input type="text" id="contactFormName" name="contact[name]" value="{{ form.name }}"/>
        </div>
        <div class="form-group">
          <label>Deine Emailadresse:*</label>
          <input type="email" id="contactFormEmail" name="contact[email]" value="{{ form.email }}" />
        </div>
        <div class="form-group">
          <label>Nachricht:*</label><br/>
          <textarea class="form-control" rows="15" cols="75" id="contactFormMessage" name="contact[body]">{{ form.body }}</textarea>
        </div>
        <div class="form-group">
          <button type="submit" id="contactFormSubmit" class="btn btn-default">Abschicken</button>
        </div>
      {% endif %}
    {% endform %}
  </div>
</div>


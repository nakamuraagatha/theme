{% assign product_type = collection.all_types | first | downcase %}

<div class="{{ product_type }} row">
  <div class="header col-md-9">
    <img src="{{ collection.image.src | collection_img_url: 'original' }}" alt="{{ collection.title | escape  }}" class="img-responsive">
    <h1>{{ collection.title }}</h1>
  </div>
  <div class="description col-md-3">
    {{ collection.description }}
  </div>
</div>

<div class="{{ product_type }} row">
  <div class="products col-md-10 col-md-offset-1 ">
    <ul class="products">
      {% for product in collection.all_products %}
        {% include 'product' with product %}
      {% endfor %}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <hr class="dots">
  </div>
</div>

/*============================================================================
  Dependency-free breakpoint mixin
    - http://blog.grayghostvisuals.com/sass/sass-media-query-mixin/
==============================================================================*/
$small: 480px;
$medium: 600px;
$large: 769px;

$min: min-width;
$max: max-width;
@mixin at-query ($constraint, $viewport1, $viewport2:null) {
  @if $constraint == $min {
    @media screen and ($min: $viewport1) {
      @content;
    }
  } @else if $constraint == $max {
    @media screen and ($max: $viewport1) {
      @content;
    }
  } @else {
    @media screen and ($min: $viewport1) and ($max: $viewport2) {
      @content;
    }
  }
}

@font-face {
  font-family: 'playmakers';
  src: url(' {{ "playmakers.eot" | asset_url }} ');
  src: url(' {{ "playmakers.eot" | asset_url }}?#iefix ') format('embedded-opentype'),
       url(' {{ "playmakers.woff" | asset_url }} ') format('woff'),
       url(' {{ "playmakers.ttf" | asset_url }} ') format('truetype'),
       url(' {{ "playmakers.svg" | asset_url }}#playmakers ') format('svg');
  font-weight: normal;
  font-style: normal;
}

.header {
  padding: 15px 0;
}

.alternative-payment-methods {
  display: none;
}

.shop__name {
  font-family: 'playmakers';
  text-transform: uppercase;
  font-size: 35pt;
  color: #FFF;
  padding-bottom: 0px;

  @include at-query ($max, $medium) {
    font-size: 22pt;
    margin-left: 15px;
  }
}

#checkout:not(.current-step-review) .step--completed .section__summary {
  @include at-query ($max, $medium) {
    display: block;
  }
}

.btn.modal__close {
  position: inherit;
  color: #FFF;
  font-size: 15px;
  margin-bottom: 30px;
  width: 100px;
}

.back.mod {
  text-align:  center;
}

#header {
  background-image: url('{{'bg_header.png' | asset_url}}');
  height: 230px;
}
#teaser #teaser-carousel {
  padding: 0;
}
#teaser #teaser-products {
  padding: 0;
  padding-left: 30px;
}
#teaser #teaser-products ul {
  display: none;
}
#teaser #teaser-products ul.active {
  display: block;
}
#teaser #teaser-products ul li {
  margin-bottom: 15px;
}
.collection ul li {
  float: left;
  margin: 10px;
}
.collection ul li .more-body {
  width: 100%;
}
.collection ul li .more-body h5 {
  color: #fff;
}
.collection ul li .more-body a {
  float: left;
  color: #000;
}
.collection ul li .more-body a.price {
  float: right;
  color: #fff;
}
#new-products {
  background: url('{{'bg_more_left.png' | asset_url}}') top left no-repeat, url('{{'bg_more.png' | asset_url}}') top left repeat-x;

/*------------- MIXINS ------------------ */
.hidden {
  display: none;
}
.white {
  background-color: white;
}
.green {
  background-color: green;
}
.red {
  background-color: red;
}
.blue {
  background-color: blue;
}
.yellow {
  background-color: yellow;
}
.gray {
  background-color: gray;
}
.bglight {
  background-color: #909090;
  background: url('{{'bg_blog.jpg' | asset_url}}');
}
.bglight-screws {
  background-color: #909090;
  background: url('{{'bg_blog.jpg' | asset_url}}');
  background: url('{{'bg_blog_border.png' | asset_url}}') top left repeat-y, url('{{'bg_blog_border.png' | asset_url}}') top right repeat-y, url('{{'bg_blog.jpg' | asset_url}}');
}
.product-border {
  box-shadow: -1px 2px 4px #000000;
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center center;
  background-clip: content-box;
  background-color: #FFF;
}
.product-border:hover {
  background-size: 102% auto;
}
.content-offset > div {
  padding-top: 40px;
}
.ul-reset {
  padding: 0;
  list-style: none;
  margin-left: 0;
}
/*-------------- OVERRIDES ----------------- */
body {
  background-color: #363636;
  background-image: url('{{'background.jpg' | asset_url}}');
  color: #000;
  font-family: "Titillium Web";
  font-weight: 600;
  font-size: 15pt;
  line-height: 20pt;
}
a {
  color: #fff;
}
a:hover {
  color: #aaa;
}
h1 {
  font-family: 'jersey_m54regular';
  color: #D9DADA;
  font-size: 35pt;
}
h2 {
  font-family: 'jersey_m54regular';
  color: #F6F6F6;
  font-size: 18pt;
}
h4 {
  font-family: 'jersey_m54regular';
  color: #F6F6F6;
  font-size: 14pt;
}
hr {
  background-image: url('{{'hr.png' | asset_url}}');
  background-repeat: repeat-x;
  height: 40px;
  border: 0;
}
ul.reset {
  padding: 0;
  list-style: none;
  margin-left: 0;
}

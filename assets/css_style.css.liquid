body {
  background-image: url('{{'background.png' | asset_url}}');
  color: #000;
}
.product-border {
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center center;
  background-clip: content-box;
  background-color: #FFF;
}
ul.reset {
  padding: 0;
  list-style: none;
  margin-left: 0;
}
a {
  color: #fff;
}
a:hover {
  color: #aaa;
}
/*------------------------------- */
#main {
  background-image: url('{{'bg_content.png' | asset_url}}');
  box-shadow: 0px 0px 10px #000000;
}
#top-nav.nav-pills a {
  font-size: 11px;
  color: #ffffff;
  text-transform: uppercase;
  margin: 2px 0px;
  padding: 4px 10px;
}
#top-nav.nav-pills a:hover {
  color: #000000;
}
#menu div {
  padding: 0;
}
#menu #main-nav.nav-pills {
  padding: 0;
}
#menu #main-nav.nav-pills a {
  font-size: 13px;
  color: #ffffff;
  text-transform: uppercase;
  margin: 2px 0px;
  padding: 1px 10px;
}
#menu #main-nav.nav-pills a.button {
  margin-top: 35px;
  padding-top: 65px;
  text-align: center;
  background-image: url('{{'button_sprite.png' | asset_url}}');
  background-position: 85px 0px;
  width: 85px;
  height: 85px;
}
#menu #main-nav.nav-pills a.button:hover {
  color: red;
  background-position: 0px 0px;
}
#menu #main-nav.nav-pills #nav-helmet .button:hover {
  background-position: 0px 0px;
}
#menu #main-nav.nav-pills #nav-hands .button {
  background-position: 85px 85px;
}
#menu #main-nav.nav-pills #nav-hands .button:hover {
  background-position: 0px 85px;
}
#menu #main-nav.nav-pills #nav-logo a:hover {
  background: transparent;
}
#menu #main-nav.nav-pills #nav-blog {
  margin-left: 50px;
}
#header {
  background-image: url('{{'bg_header.png' | asset_url}}');
  height: 230px;
}
#menu {
  background-image: url('{{'bg_menu.png' | asset_url}}');
  background-repeat: repeat-x;
  background-position: 0 30px;
  height: 160px;
  width: 100%;
  margin-top: 100px;
  position: absolute;
  z-index: 100;
}
#content #teaser #teaser-carousel {
  padding: 0;
}
#content #teaser #teaser-products {
  padding: 0;
  padding-left: 30px;
}
#content #teaser #teaser-products ul {
  display: none;
}
#content #teaser #teaser-products ul.active {
  display: block;
}
#content #teaser #teaser-products ul li {
  margin-bottom: 15px;
}
hr {
  background-image: url('{{'hr.png' | asset_url}}');
  height: 40px;
  border: 0;
}
#more {
  background: url('{{'bg_more_left.png' | asset_url}}') top left no-repeat, url('{{'bg_more.png' | asset_url}}') top left repeat-x;
  background-position: 0 60px;
  overflow-x: visible;
  height: 300px;
  margin-left: -30px;
}
#more .right div {
  background: url('{{'bg_more_right.png' | asset_url}}') right 60px no-repeat;
  margin-left: 30px;
  height: 300px;
  width: 100%;
}
#more #more-list {
  width: 100%;
}
#more #more-list li {
  float: left;
  margin-top: 15px;
  width: 20%;
  padding-left: 10px;
  padding-right: 10px;
}
#more #more-list .more-head {
  background: #fff;
  width: 100%;
  text-align: center;
  margin-bottom: 20px;
}
#more #more-list .more-head img {
  height: 125px;
}
#more #more-list .more-body {
  width: 100%;
}
#more #more-list .more-body h5 {
  color: #fff;
}
#more #more-list .more-body a {
  float: left;
  color: #000;
}
#more #more-list .more-body a.price {
  float: right;
  color: #fff;
}
#blog {
  background: url('{{'bg_blog_border.png' | asset_url}}') top left repeat-y, url('{{'bg_blog_border.png' | asset_url}}') top right repeat-y, url('{{'bg_blog.png' | asset_url}}');
}
#footer {
  background: url('{{'footer_deco2.png' | asset_url}}') top right no-repeat, url('{{'bg_footer.png' | asset_url}}');
  background-position: right 40px, left top;
  height: 250px;
  padding-top: 40px;
}
#footer #footer-list > li {
  background: url('{{'footer_deco.png' | asset_url}}') no-repeat;
  background-position: left 20px;
  float: left;
  padding-left: 30px;
  margin-right: 80px;
}
#footer p {
  color: #FFF;
}
/*------------------------------- */
.hidden {
  display: none;
}
.white {
  background-color: white;
}
.green {
  background-color: green;
}
.red {
  background-color: red;
}
.blue {
  background-color: blue;
}
.yellow {
  background-color: yellow;
}
.gray {
  background-color: gray;
}

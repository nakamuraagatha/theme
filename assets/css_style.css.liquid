body {
  background-color: #363636;
  background-image: url('{{'background.jpg' | asset_url}}');
  color: #000;
}
.product-border {
  box-shadow: -1px 2px 4px #000000;
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center center;
  background-clip: content-box;
  background-color: #FFF;
}
ul.reset {
  padding: 0;
  list-style: none;
  margin-left: 0;
}
a {
  color: #fff;
}
a:hover {
  color: #aaa;
}
/*------------------------------- */
#main {
  background-color: #7c7c7c;
  background-image: url('{{'bg_content.jpg' | asset_url}}');
  box-shadow: 0px 0px 10px #000000;
}
#top-nav.nav-pills a {
  font-size: 11px;
  color: #ffffff;
  text-transform: uppercase;
  margin: 2px 0px;
  padding: 4px 10px;
}
#top-nav.nav-pills a:hover {
  color: #000000;
}
#menu div {
  padding: 0;
}
#menu #main-nav.nav-pills {
  padding: 0;
}
#menu #main-nav.nav-pills a {
  font-size: 13px;
  color: #ffffff;
  text-transform: uppercase;
  margin: 2px 0px;
  padding: 1px 10px;
}
#menu #main-nav.nav-pills a.button {
  margin-top: 30px;
  padding-top: 70px;
  text-align: center;
  background-image: url('{{'button_sprite.png' | asset_url}}');
  width: 80px;
  height: 90px;
}
#menu #main-nav.nav-pills #nav-about .button {
  background-position: 0px 0px;
}
#menu #main-nav.nav-pills #nav-about .button:hover {
  background-position: 80px 0px;
}
#menu #main-nav.nav-pills #nav-helmets .button {
  background-position: 0px -90px;
}
#menu #main-nav.nav-pills #nav-helmets .button:hover {
  background-position: 80px -90px;
}
#menu #main-nav.nav-pills #nav-hands .button {
  background-position: 0px -180px;
}
#menu #main-nav.nav-pills #nav-hands .button:hover {
  background-position: 80px -180px;
}
#menu #main-nav.nav-pills #nav-pads .button {
  background-position: 0px -270px;
}
#menu #main-nav.nav-pills #nav-pads .button:hover {
  background-position: 80px -270px;
}
#menu #main-nav.nav-pills #nav-boots .button {
  background-position: 0px -360px;
}
#menu #main-nav.nav-pills #nav-boots .button:hover {
  background-position: 80px -360px;
}
#menu #main-nav.nav-pills #nav-kits {
  display: none;
}
#menu #main-nav.nav-pills #nav-kits .button {
  background-position: 0px -450px;
}
#menu #main-nav.nav-pills #nav-kits .button:hover {
  background-position: 80px -450px;
}
#menu #main-nav.nav-pills #nav-blog .button {
  background-position: 0px -540px;
}
#menu #main-nav.nav-pills #nav-blog .button:hover {
  background-position: 80px -540px;
}
#menu #main-nav.nav-pills #nav-contact .button {
  background-position: 0px -630px;
}
#menu #main-nav.nav-pills #nav-contact .button:hover {
  background-position: 80px -630px;
}
#menu #main-nav.nav-pills #nav-logo a:hover {
  background: transparent;
}
#menu #main-nav.nav-pills #nav-blog {
  margin-left: 50px;
}
#header {
  background-image: url('{{'bg_header.png' | asset_url}}');
  height: 230px;
}
#menu {
  background-image: url('{{'bg_menu.png' | asset_url}}');
  background-repeat: repeat-x;
  background-position: 0 30px;
  height: 160px;
  width: 100%;
  margin-top: 100px;
  position: absolute;
  z-index: 100;
}
#teaser #teaser-carousel {
  padding: 0;
}
#teaser #teaser-products {
  padding: 0;
  padding-left: 30px;
}
#teaser #teaser-products ul {
  display: none;
}
#teaser #teaser-products ul.active {
  display: block;
}
#teaser #teaser-products ul li {
  margin-bottom: 15px;
}
.collection > div {
  padding: 0;
}
.collection ul li {
  float: left;
  margin: 10px;
}
.collection ul li .more-body {
  width: 100%;
}
.collection ul li .more-body h5 {
  color: #fff;
}
.collection ul li .more-body a {
  float: left;
  color: #000;
}
.collection ul li .more-body a.price {
  float: right;
  color: #fff;
}
hr {
  background-image: url('{{'hr.png' | asset_url}}');
  background-repeat: repeat-x;
  height: 40px;
  border: 0;
}
#new-products {
  background: url('{{'bg_more_left.png' | asset_url}}') top left no-repeat, url('{{'bg_more.png' | asset_url}}') top left repeat-x;
  background-position: 0 60px;
  overflow-x: visible;
  height: 300px;
  margin-left: -30px;
}
#new-products > div {
  padding-left: 30px;
}
#new-products .right div {
  background: url('{{'bg_more_right.png' | asset_url}}') right 60px no-repeat, url('{{'bg_more.png' | asset_url}}') left 60px repeat-x;
  margin-left: 30px;
  height: 300px;
  width: 100%;
}
#new-products .list {
  width: 100%;
}
#new-products .list li {
  float: left;
  margin-top: 10px;
  width: 20%;
  padding-left: 10px;
  padding-right: 10px;
}
#new-products .list .head {
  box-shadow: inset 0px 0px 4px #000000;
  padding: 5px;
  background: #fff;
  width: 100%;
  text-align: center;
  margin-bottom: 20px;
}
#new-products .list .head img {
  height: 125px;
}
#new-products .list .body {
  width: 100%;
}
#new-products .list .body h5 {
  color: #fff;
}
#new-products .list .body a {
  float: left;
  color: #000;
}
#new-products .list .body a.price {
  float: right;
  color: #fff;
}
#blog {
  background-color: #909090;
  background: url('{{'bg_blog_border.png' | asset_url}}') top left repeat-y, url('{{'bg_blog_border.png' | asset_url}}') top right repeat-y, url('{{'bg_blog.jpg' | asset_url}}');
}
#footer {
  background: url('{{'footer_deco2.png' | asset_url}}') top right no-repeat, url('{{'bg_footer.png' | asset_url}}');
  background-position: right 40px, left top;
  height: 250px;
  padding-top: 40px;
}
#footer #footer-list > li {
  background: url('{{'footer_deco.png' | asset_url}}') no-repeat;
  background-position: left 20px;
  float: left;
  padding-left: 30px;
  margin-right: 80px;
}
#footer p {
  color: #FFF;
}

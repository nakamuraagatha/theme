.hidden {
  display: none;
}
.white {
  background-color: white;
}
.green {
  background-color: green;
}
.red {
  background-color: red;
}
.blue {
  background-color: blue;
}
.yellow {
  background-color: yellow;
}
.gray {
  background-color: gray;
}
